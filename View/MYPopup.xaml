<?xml version="1.0" encoding="utf-8" ?>
<tk:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            x:Class="ProjectApp.View.MYPopup"
            xmlns:tk="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
          xmlns:viewModel="clr-namespace:ProjectApp.ViewModel"
          x:DataType="viewModel:MYPopupViewModel">
    <VerticalStackLayout>
        <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Button Text="click me" Command="{Binding BtnCommand}"/>
    </VerticalStackLayout>
</tk:Popup>