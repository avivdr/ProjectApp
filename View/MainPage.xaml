<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="ProjectApp.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewModel="clr-namespace:ProjectApp.ViewModel"
    x:DataType="viewModel:MainPageViewModel">

    <ScrollView>
        <VerticalStackLayout>
            <Button Command="{Binding BtnCommand}" Text="Login" />
            <Button Command="{Binding Btn2Command}" Text="Show user" />
            <Button Command="{Binding Btn3Command}" Text="debounce" />
            <Button Command="{Binding Btn4Command}" Text="Get Post"/>

            <Image HeightRequest="500" Aspect="AspectFit" Source="{Binding Post.File}" />

            <Label Text="{Binding Username}" />
            <Label Text="{Binding Password}" />
            <Label Text="{Binding Email}" />
        </VerticalStackLayout>
    </ScrollView>
    
</ContentPage>
