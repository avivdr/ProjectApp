<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="ProjectApp.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:model="clr-namespace:ProjectApp.Model"
    xmlns:sfList="clr-namespace:Syncfusion.Maui.ListView;assembly=Syncfusion.Maui.ListView"
    xmlns:viewModel="clr-namespace:ProjectApp.ViewModel"
    x:DataType="viewModel:MainPageViewModel">

    <Shell.TitleView>
        <StackLayout BackgroundColor="White">
            <Button
                Command="{Binding BtnCommand}"
                HorizontalOptions="Start"
                Text="Login"
                WidthRequest="100" />
        </StackLayout>
    </Shell.TitleView>

    <ScrollView>
        <VerticalStackLayout>
            <sfList:SfListView
                ItemSize="200"
                ItemsSource="{Binding Posts}"
                MaximumHeightRequest="2000">
                <sfList:SfListView.ItemTemplate>
                    <DataTemplate x:DataType="model:Post">
                        <VerticalStackLayout Spacing="15">
                            <HorizontalStackLayout Spacing="20">
                                <Label Text="{Binding Creator.Username}" />
                                <Label Text="{Binding UploadDateTime}" />
                            </HorizontalStackLayout>

                            <Label Text="{Binding Title}" />
                            <Label Text="{Binding Content}" />
                            <Image HeightRequest="100" Source="{Binding File}" />
                        </VerticalStackLayout>
                    </DataTemplate>
                </sfList:SfListView.ItemTemplate>
            </sfList:SfListView>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
