<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProjectApp.MainPage"
             xmlns:viewModel="clr-namespace:ProjectApp.ViewModel"
             x:DataType="viewModel:MainPageViewModel">

    <VerticalStackLayout>
        <Button Text="Login" Command="{Binding BtnCommand}"/>
        <Button Text="Show user" Command="{Binding Btn2Command}"/>
        <Button Text="post" Command="{Binding Btn3Command}"/>

        <Label Text="{Binding Username}"/>
        <Label Text="{Binding Password}"/>
        <Label Text="{Binding Email}"/>
    </VerticalStackLayout>
</ContentPage>
