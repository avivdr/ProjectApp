<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProjectApp.View.Login"
             xmlns:ViewModel="clr-namespace:ProjectApp.ViewModel"
             x:DataType="ViewModel:LoginViewModel"
             Title="Login">
        <Grid RowDefinitions="*,*,*,*" ColumnDefinitions="*,*,*">
            <Label Text="Login" Grid.Row="0" Grid.Column="1"/>
        <Label Text="Username" Grid.Row="1" Grid.Column="0" HorizontalOptions="Center"/>
            <Entry 
                Text="{Binding UserName}"
                Grid.Row="1"
                Grid.Column="1"
                Grid.ColumnSpan="2"
                HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand"/>

        <Label Text="Password" Grid.Row="2" Grid.Column="0" HorizontalOptions="Center"/>
            <Entry 
                IsPassword="True"
                Text="{Binding Password}"
                Grid.Row="2"
                Grid.Column="1"
                Grid.ColumnSpan="2"
                Margin="20"/>


        <Button
            Text="Login"
            Command="{Binding BtnCommand}"
            Grid.Row="3"
            Grid.Column="1"/>
    </Grid>
</ContentPage>