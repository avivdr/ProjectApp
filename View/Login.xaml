<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProjectApp.View.Login"
             xmlns:ViewModel="clr-namespace:ProjectApp.ViewModel"
             x:DataType="ViewModel:LoginViewModel"
             Title="Login"
             
             BackgroundColor="#101010">
    <ContentPage.Resources>
        <Style TargetType="Label" Class="LoginLbl">
            <Setter Property="TextColor" Value="{StaticResource LightTextCLr}"/>
            <Setter Property="FontSize" Value="16"/>
        </Style>
        
        <Style TargetType="Entry" Class="LoginEntry">
            <Setter Property="BackgroundColor" Value="{StaticResource LightTextCLr}"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="TextColor" Value="{StaticResource LightTextCLr}"/>
        </Style>
    </ContentPage.Resources>

    <Border 
        StrokeShape="RoundRectangle 20"
        HorizontalOptions="Center"
        VerticalOptions="Center"
        StrokeThickness="0">
        
        <VerticalStackLayout 
        Spacing="40"
        Padding="35"
        HorizontalOptions="Center"
        VerticalOptions="Center"
        BackgroundColor="#1a1a1a"
        WidthRequest="500" >
            <VerticalStackLayout Grid.Column="1" Grid.Row="1" Spacing="10">
                <Label Text="Username" StyleClass="LoginLbl"/>
                <Entry Text="{Binding Username}"  StyleClass="LoginEntry"/>
            </VerticalStackLayout>

            <VerticalStackLayout Grid.Column="1" Grid.Row="2" Spacing="10">
                <Label Text="Password" StyleClass="LoginLbl"/>
                <Entry IsPassword="True" Text="{Binding Password}" StyleClass="LoginEntry" BackgroundColor="#444444"/>
            </VerticalStackLayout>

            <Label Text="{Binding ErrorMessage}" StyleClass="ErrorLbl"  IsVisible="{Binding IsLoginError}"/>

            <Button 
                Text="Login"
                Grid.Column="1"
                Grid.Row="3"
                WidthRequest="100"
                StyleClass="DarkBtn"
                Command="{Binding LoginCommand}"/>
        </VerticalStackLayout>
    </Border>    
</ContentPage>