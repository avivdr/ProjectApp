<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProjectApp.View.Login"
             xmlns:ViewModel="clr-namespace:ProjectApp.ViewModel"
             x:DataType="ViewModel:LoginViewModel"
             Title="Login"
             
             BackgroundColor="#001a1a1a">
    <ContentPage.Resources>
        <Style TargetType="Label" Class="LoginLbl">
            <Setter Property="TextColor" Value="{StaticResource LightTextCLr}"/>
            <Setter Property="FontSize" Value="16"/>
        </Style>
        
        <Style TargetType="Entry" Class="LoginEntry">
            <Setter Property="BackgroundColor" Value="#1a1a1a"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="TextColor" Value="{StaticResource LightTextCLr}"/>
        </Style>
    </ContentPage.Resources>

    <Border 
        StrokeShape="RoundRectangle 20"
        HorizontalOptions="Center"
        VerticalOptions="Center"
        StrokeThickness="0">
        
        <VerticalStackLayout
            Spacing="40"
            Padding="35"
            BackgroundColor="#030303"
            WidthRequest="500">
            <VerticalStackLayout Grid.Column="1" Grid.Row="1" Spacing="20">
                <Label Text="Username" StyleClass="LoginLbl"/>
                <Entry Text="{Binding Username}" StyleClass="LoginEntry"/>
            </VerticalStackLayout>

            <VerticalStackLayout Grid.Column="1" Grid.Row="2" Spacing="20">
                <Label Text="Password" StyleClass="LoginLbl"/>
                <Entry IsPassword="True" Text="{Binding Password}" StyleClass="LoginEntry" x:Name="lastEntry"/>
                <Label Text="{Binding ErrorMessage}" StyleClass="ErrorLbl" IsVisible="{Binding IsLoginError}"/>
            </VerticalStackLayout>


            <Button 
                Text="Login"
                Grid.Column="1"
                Grid.Row="3"
                WidthRequest="100"
                StyleClass="DarkBtn"
                BackgroundColor="#001f5c"
                Command="{Binding LoginCommand}"/>
        </VerticalStackLayout>
    </Border>    
</ContentPage>